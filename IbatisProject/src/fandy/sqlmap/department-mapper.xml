<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL MAP 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="department">
	<select id="getListOptionDepartment" resultClass="fandy.bean.OptionBean">
		SELECT DEPARTMENT_ID AS key, 
		DEPARTMENT_NAME AS value 
		FROM DEPARTMENTS
	</select>
</sqlMap>